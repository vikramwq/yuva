<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="120dp"
    android:background="@color/profile_inside_bg">
    <TextView
        android:id="@+id/dateofbirth1"
        android:textSize="18sp"
        android:text="@string/logout_message"
       android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_gravity="left"
        android:layout_marginLeft="40dp"
        android:textColor="@color/tab_background"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

   <!-- <ProgressBar
        android:id="@+id/logOut_progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_centerInParent="true"
        android:indeterminate="true"
        android:visibility="gone"/>-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_gravity="right|center"
        android:gravity="right|center"
       android:layout_marginLeft="20dp"
        android:layout_marginRight="30dp"
        android:background="@color/profile_inside_bg">

    <Button
        android:id="@+id/cancel_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|center"
        android:gravity="right|center"
        android:text="@string/com_facebook_loginview_cancel_action"
        android:textColor="@color/tab_background"
        android:background="@null"
        android:textSize="14sp"
        android:textAlignment="center"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="15dp" />

    <Button
        android:id="@+id/ok_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|center"
        android:gravity="right|center"
        android:textColor="@color/tab_background"
        android:text="@string/com_facebook_loginview_log_out_action"
        android:background="@null"
        android:textSize="14sp"
        android:textAlignment="center"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="15dp" />
</LinearLayout>
</LinearLayout>