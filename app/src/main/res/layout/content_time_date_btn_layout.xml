<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_gravity="center_horizontal"
        android:background="#002633">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="15dp"
            android:id="@+id/imageButton"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/back_btn_left"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="15dp"
            android:id="@+id/imageButton2"
            android:background="@drawable/back_btn_right"
            android:layout_alignParentTop="true"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@+id/imageButton"
            android:layout_toEndOf="@+id/imageButton"
            android:layout_marginLeft="270dp"
            android:layout_marginStart="280dp" />

        <com.multitv.yuv.ui.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:id="@+id/tvday"
            android:textColor="@color/white"
            android:layout_gravity="center_horizontal"
            android:layout_alignLeft="@+id/tvDate"
            android:layout_alignStart="@+id/tvDate"
            android:layout_alignParentTop="true" />

        <com.multitv.yuv.ui.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:id="@+id/tvDate"
            android:layout_below="@+id/tvday"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>

</LinearLayout>