<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:background="#10000000"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_horizontal_margin"
    android:layout_height="110dp">

    <ImageView
        android:layout_width="@dimen/_120sdp"
        android:id="@+id/channel_img"
        android:scaleType="fitXY"
        android:layout_height="@dimen/_80sdp"
        android:contentDescription="hi" />

    <View
        android:layout_width="@dimen/_1sdp"
        android:id="@+id/line_view"
        android:background="#000000"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/channel_img"
        android:layout_height="@dimen/_60sdp"/>

    <com.multitv.yuv.ui.CustomTextView
        android:layout_width="wrap_content"
        android:id="@+id/program_name"
        android:layout_toRightOf="@+id/line_view"
        android:layout_marginLeft="10dp"

        android:textSize="15sp"
        android:textColor="#000000"
        android:layout_height="wrap_content" />

    <com.multitv.yuv.ui.CustomTextView
        android:layout_width="wrap_content"
        android:id="@+id/program_desc"
        android:layout_toRightOf="@+id/line_view"
        android:layout_below="@+id/program_name"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:textSize="12sp"
        android:layout_height="wrap_content" />



<ImageView
    android:layout_width="25dp"
    android:id="@+id/program_img"
    android:layout_toRightOf="@+id/program_name"
    android:background="@mipmap/guide"
    android:layout_marginLeft="30dp"
    android:layout_height="25dp"
    android:contentDescription="guide" />


</RelativeLayout>