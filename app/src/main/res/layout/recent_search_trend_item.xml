<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_trend_recent"
    android:gravity="center_vertical"
    android:paddingBottom="3dp"
    android:paddingLeft="7dp"
    android:paddingRight="2dp"
    android:paddingTop="3dp">

    <TextView
        android:id="@+id/recent_search_trend_item_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:ellipsize="end"
        android:maxLength="15"
        android:maxLines="1"
        android:maxWidth="@dimen/_70sdp"
        android:paddingRight="5dp"
        android:text="recent events in gurga"
        android:textColor="@android:color/white"
        android:textSize="12sp" />

    <!--android:textStyle="bold"-->

    <ImageView
        android:id="@+id/recent_search_trend_item_imageView"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:padding="5dp"
        android:scaleType="fitCenter"
        android:src="@drawable/circular_cross" />
</LinearLayout>

